<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme2" parent="AppBaseTheme">

        <!-- 设置没有标题 #@android:style/Theme-->
        <item name="android:windowNoTitle">true</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme">

        <!-- 设置activity切换动画 -->
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
    </style>
    <!-- animation 样式 -->
    <style name="activityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>

    <!-- TitleBar -->
    <style name="TitleBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/title_bar_height_new</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:background">@color/red4</item>
    </style>

    <style name="TitleBar_Menu_New">
        <item name="android:windowEnterAnimation">@anim/anim_titlemenu_in_new</item>
        <item name="android:windowExitAnimation">@anim/anim_titlemenu_out_new</item>
    </style>

    <style name="TitleBar_LeftButton">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TitleBar_Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <!-- <item name="android:textSize">23sp</item> -->
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TitleBar_RightFrame">
        <item name="android:layout_width">@dimen/title_button_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="TitleBar_RightButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="TitleBar_RedPoint">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
    <!-- TitleBar -->
    <style name="WidgetDirver">
        <item name="android:layout_marginTop">@dimen/activity_horizontal_layout_marginTop</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_layout_marginTop</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_layout_marginTop</item>
    </style>

    <style name="RepayPlanStyle">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="TxtStyle">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <style name="TxtStyle_NoBottom">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>

    <style name="TxtStyle_NoTop">
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>
    <!-- record -->
    <style name="recordStyle">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <style name="recordbuttonStyle">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginRight">35dp</item>
        <item name="android:layout_marginLeft">35dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <style name="recordBackground">
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="mystyle" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/head_in</item>
        //进入时的动画
        <item name="@android:windowExitAnimation">@anim/head_out</item>
        //退出时的动画
    </style>

    <style name="Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="testStyle">
        <item name="android:fillViewport">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:colorBackground">@android:color/black</item>
    </style>

    <style name="hot_product_linear_Style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginLeft">5dip</item>
        <item name="android:layout_marginRight">5dip</item>
    </style>

    <!--产品预约列表中，状态和类型的下拉列表text style-->
    <style name="product_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#ffffff</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!--产品预约列表中，状态和类型的下拉列表text的下划线 style-->
    <style name="product_text_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#cccccc</item>
    </style>

    <!--产品预约详情整条item ll布局 style-->
    <style name="product_linearlayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!--产品预约详情左侧text style-->
    <style name="product_text_detail_lt">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.6</item>
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">right</item>
    </style>

    <!--产品预约详情右侧text style-->
    <style name="product_text_detail_rt">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.8</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--产品预约详情右侧预约服务 text style-->
    <style name="product_text_detail_rt_service">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.8</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColor">@color/orange_d</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--服务 预约医院整条item Linealayout  style-->
    <style name="ll_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!--服务 预约医院左侧 TextView  style-->
    <style name="tv_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--服务 预约医院右侧EditText  style-->
    <style name="et_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">3</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--view 底部线条 style-->
    <style name="v_line_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/bg_gray</item>
    </style>

    <!--预约医院的日期对话框样式-->
    <style name="date_picker_style">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@null</item>
    </style>

    <!--预约医院的日期对话框的进出动画-->
    <style name="date_picker_anim" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/date_picker_enter</item>
        <item name="@android:windowExitAnimation">@anim/date_picker_exit</item>
    </style>

    <!--  邮轮详情页邮轮的信息样式 -->
    <style name="linerMessage">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- 服务模块样式 -->
    <style name="allServices_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="allServices_order">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>