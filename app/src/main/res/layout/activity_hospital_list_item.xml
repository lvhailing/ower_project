<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_hospita_name"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="15dip"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="15dip"
            android:layout_weight="3"
            android:text="北京协和医院"
            android:textColor="#333"
            android:textSize="16sp"/>


        <TextView
            android:id="@+id/tv_hospital_level"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="15dip"
            android:layout_marginRight="12dp"
            android:layout_marginTop="15dip"
            android:layout_toLeftOf="@id/iv_arrow1"
            android:layout_toRightOf="@id/tv_hospita_name"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingLeft="5dip"
            android:text="三级甲等"
            android:textColor="@color/txt_gray_dark"
            android:textSize="14sp"/>

       <!-- <ImageView
            android:id="@+id/iv_arrow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:src="@drawable/arrow"/>-->
    </LinearLayout>

    <View
        style="@style/v_line_style"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
