<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/ll_trip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tv_travel_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2晚3日"
                android:textColor="#333"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_travel_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/tv_travel_date"
                android:text="澳洲之游"
                android:textColor="#333"
                android:textSize="16sp"/>
        </RelativeLayout>

        <!-- <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="5dp"
             android:background="@drawable/shape_line"
             android:padding="5dp"
             android:text="澳新.澳洲"
             android:textColor="@color/txt_black"/>-->

        <com.jdhui.widget.FlowLayoutView
            android:id="@+id/framlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="15dp"
            android:text="￥1533/人起"
            android:textColor="@color/txt_black"
            android:textSize="18sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp">

            <TextView
                android:id="@+id/tv_tab"
                android:layout_width="60dp"
                android:layout_height="26dp"
                android:background="@drawable/shape_bg_gray1"
                android:gravity="center"
                android:text="单船票"
                android:textColor="@color/txt_black"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                android:layout_toRightOf="@id/tv_tab"
                android:text="皇家加勒比国际邮轮.海洋航行者号"
                android:textColor="@color/txt_black"
                android:textSize="18sp"/>

        </RelativeLayout>

    </LinearLayout>

    <View
        style="@style/v_line_style"
        android:layout_below="@id/ll_trip"
        android:layout_marginTop="5dp"/>

</RelativeLayout>
